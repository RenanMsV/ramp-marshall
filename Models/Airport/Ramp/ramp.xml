<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>ramp.ac</path>
	
	<animation>
		<object-name>left-arm</object-name>
		<type>rotate</type>
		<property alias="../../params/left-arm-z" />
		<center>
			<x-m>20</x-m>
			<y-m>-0.1680</y-m>
			<z-m>1.4284</z-m>
		</center>
		<axis>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<object-name>right-arm</object-name>
		<type>rotate</type>
		<property alias="../../params/right-arm-z" />
		<center>
			<x-m>20</x-m>
			<y-m>0.1680</y-m>
			<z-m>1.4284</z-m>
		</center>
		<axis>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<object-name>left-arm</object-name>
		<type>rotate</type>
		<property alias="../../params/left-arm-x" />
		<center>
			<x-m>0</x-m>
			<y-m>-0.1680</y-m>
			<z-m>1.4284</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	
	<animation>
		<object-name>right-arm</object-name>
		<type>rotate</type>
		<property alias="../../params/right-arm-x" />
		<center>
			<x-m>0</x-m>
			<y-m>0.1680</y-m>
			<z-m>1.4284</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	
	<animation>
		<object-name>left-arm-outer</object-name>
		<type>rotate</type>
		<property alias="../../params/left-arm-outer-x" />
		<center>
			<x-m>0</x-m>
			<y-m>-0.45</y-m>
			<z-m>1.43</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	
	<animation>
		<object-name>right-arm-outer</object-name>
		<type>rotate</type>
		<property alias="../../params/right-arm-outer-x" />
		<center>
			<x-m>0</x-m>
			<y-m>0.45</y-m>
			<z-m>1.43</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>waldo</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script alias="../../../../params/toggle-ramp-marshall-script" />
			</binding>
		</action>
	</animation>

	<animation>
		<object-name>rect</object-name>
		<enable-hot type="bool">false</enable-hot>
	</animation>

</PropertyList>
