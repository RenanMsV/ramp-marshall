<?xml version="1.0" encoding="UTF-8"?>
<!-- this file requires FlightGear version 2018.2 or newer -->
<PropertyList>
	<name>ramp-marshall-dialog</name>
	<layout>vbox</layout>
	<width>200</width>

	<group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Ramp marshal config dialog</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule />
	<text>
		<label>Config as you like</label>
	</text>
	<button>
		<legend>Init all ramps</legend>
		<binding>
			<command>property-toggle</command>
			<property>/addons/by-id/com.github.renanmsv.rampmarshall/addon-devel/enable</property>
		</binding>
	</button>

	<button>
		<legend>Close</legend>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>
</PropertyList>